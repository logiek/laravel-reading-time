{
    "name": "logiek/laravel-reading-time",
    "description": "This package makes it easy to calculate the estimated reading time for a given piece of content with Laravel.",
    "keywords": ["laravel", "reading", "time"],
    "license": "MIT",
    "require": {
        "php": "^8.0|^8.1|^8.2",
        "laravel/helpers": "^1.4|^1.5|^1.6",
        "illuminate/support": "^8.0|^9.0|^10.0",
        "illuminate/config": "^8.0|^9.0|^10.0",
        "nesbot/carbon": "^2.54"
    },
    "autoload": {
        "psr-4": {
            "Logiek\\ReadingTime\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Logiek\\ReadingTime\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Logiek\\ReadingTime\\ReadingTimeServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
